---
import PlotFigure from "../components/PlotFigure.astro";
import Layout from "../layouts/Layout.astro";
import * as Plot from "@observablehq/plot";
import penguins from "../assets/penguins.json";
---
<Layout>
  <h1 class="text-3xl font-semibold mb-6">TP2 — Astro + Observable Plot</h1>

  <div class="grid gap-4 md:grid-cols-3">
    <a href="/species/Adelie" class="group rounded-xl border bg-white p-5 shadow-sm hover:shadow transition">
      <h2 class="font-medium mb-1">1) Pages par espèce</h2>
      <p class="text-sm text-gray-500">Trois pages : Adelie, Gentoo, Chinstrap.</p>
    </a>

    <a href="/iframe" class="group rounded-xl border bg-white p-5 shadow-sm hover:shadow transition">
      <h2 class="font-medium mb-1">2) Iframe</h2>
      <p class="text-sm text-gray-500">Menu qui charge une page d’espèce dans une iframe.</p>
    </a>

    <a href="/all-species" class="group rounded-xl border bg-white p-5 shadow-sm hover:shadow transition">
      <h2 class="font-medium mb-1">3) Ancres + slider</h2>
      <p class="text-sm text-gray-500">Une page, 3 graphes, navigation par ancres.</p>
    </a>
  </div>

  <section class="mt-10 rounded-xl border bg-white p-5 shadow-sm">
  <h2 class="text-xl font-medium mb-3">Graphique de test</h2>
  <PlotFigure
    options={{
      marks: [
        Plot.dot(penguins, {
          x: "culmen_length_mm",
          y: "culmen_depth_mm",
          stroke: "species",
        }),
      ],
    }}
  />
</section>
</Layout>
